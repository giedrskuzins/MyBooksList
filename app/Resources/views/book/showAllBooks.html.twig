{% extends 'base.html.twig' %}

{% block body %}
{# total items count #}
<div class="container">
    
    

    {% block search %}
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        
        <div class="row">
            <div class="col-sm-3">
                </br>
                <div class="input-group add-on">
                    {{ form_errors(form.searchField) }}
                    {{ form_widget(form.searchField, {'attr': {'class': 'form-control','placeholder': 'Paie≈°ka'}}) }}
                    <div class="input-group-btn">
                        <button id="searchButton" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
                </br>
                
            </div>
            <div class="col-sm-1">
            </div>
            <div class="col-sm-3">
                
                

            </div>
            <div class="col-sm-1">
            </div>
            <div class="col-sm-3">

            </div>    
                       
                        
        </div>
{{ form_end(form) }}
        
    {% endblock %}
    
    
    <div class="count">
        Viso:{{ pagination.getTotalItemCount }}
    </div>
    <table class="table table-striped table-hover">
    <tr>
    {# sorting of properties based on query components #}
        <th>{{ knp_pagination_sortable(pagination, 'Id', 'b.id') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'Pavadinimas', 'b.title') }}</th>

    </tr>

    {# table body #}
    {% for book in pagination %}
    <tr>
        <td>{{ book.id }}</td>
        <td>

            <a href="{{ path('ShowBookDetail', {'id': book.id}) }}"  target="_blank">{{ book.title }}</a>

        </td>
    </tr>
    {% endfor %}
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}
